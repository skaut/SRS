<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">

    <title>{_admin.common.title, [seminar_name => $seminarName]}</title>

    <link rel="shortcut icon" href="{$basePath}/favicon.ico">

    <link rel="stylesheet" href="{$basePath}/dist/admin/bundle.css">
    <link rel="stylesheet" href="{$basePath}/css/admin/style.css">
</head>

<body>
    <div id="main-menu">
        {import 'includes/main_menu.latte'}
        {include main-menu}
    </div>

    <div class="container-fluid">
        <div id="content" class="row">
            <div id="sidebar" class="col-3" n:ifcontent>
                {ifset #sidebar}
                    {include #sidebar}
                {/ifset}
            </div>
            <div id="main" class="col">
                {snippet flashes}
                    <div id="flashes" class="row">
                        <div class="col-12">
                            <div n:foreach="$flashes as $flash" n:class="alert, alert-dismissable, 'alert-' . $flash->type">
                                {$flash->message|noescape}
                            </div>
                        </div>
                    </div>
                {/snippet}

                {include #main}
            </div>
        </div>

        <hr>

        <footer>
            <p>{$footer|noescape}</p>
        </footer>
    </div>

    {block scripts}
        <script src="{$basePath}/dist/admin/bundle.js"></script>
    {/block}
</body>
</html>




