<div class="clearfix"></div>

<div class="contact-form-content">
    <div class="row">
        <div class="col">
            <h3 n:ifcontent>{$heading}</h3>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            {if $guestRole && !$guestsAllowed}
                <div class="alert alert-warning alert-forever">
                    {_web.contact_form_content.login_required_begin}
                        <a href="{plink :Auth:login, 'backlink' => $backlink}">{_web.contact_form_content.login_required_link}</a>{_web.contact_form_content.login_required_end}
                </div>
            {else}
                <div class="card card-body bg-light pb-1">
                    {control contactForm}
                </div>
            {/if}
        </div>
    </div>
</div>

