<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">

    <title>{_web.common.title, [page => $pageName, seminar_name => $seminarName]}</title>

    <link rel="shortcut icon" href="{$basePath}/favicon.ico">

    <link rel="stylesheet" href="{$basePath}/dist/web/bundle.css">
    <link rel="stylesheet" href="{$basePath}/css/web/layout.css">
    <link rel="stylesheet" href="{$basePath}/css/web/style.css">
</head>

<body class="{block body-class}{/block}">
    <div class="container">
        {snippet flashes}
            <div id="flashes" class="row">
                <div class="col">
                    {import 'includes/role_test.latte'}
                    {include role-test}

                    <div n:foreach="$flashes as $flash" n:class="alert, 'alert-' . $flash->type, mt-2">
                        {$flash->message|noescape}
                    </div>
                </div>
            </div>
        {/snippet}

        <div id="header" class="row mt-3">
            <div id="logo" class="col-md-6 text-center text-md-start">
                <a href="{plink :Web:Page:default}">
                    <img src="{$basePath}{$logo}" title="{$seminarName}" alt="logo">
                </a>
            </div>
            <div id="user-menu" class="col-md-6 text-center text-md-right">
                {import 'includes/user_menu.latte'}
                {include user-menu}
            </div>
        </div>

        <div id="main-menu" class="mt-3 mb-3">
            {import 'includes/main_menu.latte'}
            {include main-menu}
        </div>

        <div id="content" class="row">
            <div id="main" class="col">
                {include #main}
            </div>

            <div id="sidebar" class="col-md-3" n:ifcontent>
                {ifset #sidebar}
                    {include #sidebar}
                {/ifset}
            </div>
        </div>

        <hr>

        <footer>
            <p>{$footer|noescape}</p>
        </footer>
    </div>

    {block scripts}
        <script src="{$basePath}/dist/web/bundle.js"></script>
    {/block}

    {$trackingCode|noescape}
</body>
</html>
















