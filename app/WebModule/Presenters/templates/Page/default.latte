{block body-class}{$bodyClass}{/block}

{block main}
    <div class="row page-heading">
        <div class="col">
            <h2>{$page->getName()}</h2>
        </div>
    </div>

    {foreach $page->getMainContents() as $content}
        {control $content->getComponentName(), $content}
    {/foreach}
{/block}

{block sidebar}
    {foreach $page->getSidebarContents() as $content}
        {control $content->getComponentName(), $content}
    {/foreach}
{/block}

{block scripts}
    {include #parent}

    {foreach $page->getMainContents() as $content}
        {control $content->getComponentName():scripts, $content}
    {/foreach}
    {foreach $page->getSidebarContents() as $content}
        {control $content->getComponentName():scripts, $content}
    {/foreach}
{/block}

